{{> links}}

<body>
    <div class="col-12">
        <div id="signup">
            <div class="row">
                <div class="col-lg-12 mr-3 mt-4 mt-lg-5 mr-lg-5">
                    <p class=" text-right"><a href="">signin</a></p>
                </div>
                <div class="col-lg-2"></div>
                <div class="col-12 col-lg-3 mr-lg-3">
                    <div id="imgeHolder">
                        <img src="/img/page-img/signup.png" alt="">
                    </div>
                </div>
                <div class="col-lg-4 col-12">
                    <div id="signUpPush"></div>
                    <form action="/signup" method="POST">
                        <fieldset class="form-group">
                            <legend class="form-group">signup</legend>
                            <div class="form-row">
                                <div>
                                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                                </div>
                                <div class="col-lg-5  mb-3 input-group">
                                    <input type="text" name="name" placeholder="First Name" id=""
                                        class="form-control" required>
                                </div>
                                <div class="col-lg-7 mb-3 input-group">
                                    <input type="email" name="email" placeholder="Email" id="" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-row mt-md-2">
                                <div class="col-lg-5 mb-3 input-group">
                                    <input type="tel" name="tell" placeholder="Phone" id="" class="form-control" required>
                                </div>
                                <div class="col-lg-3 mb-3 input-group">
                                    <select name="country" class="form-control" id="" required>
                                        <option value="">country</option>
                                        {{#each countryList}}
                                        <option value="{{this}}">{{this}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="col-lg-4 mb-3 input-group">
                                    <select name="acountType" class="form-control" id="" required>
                                        <option value="">Account type</option>
                                        <option value="Farmer">Farmer</option>
                                        <option value="Agro company">Agro company</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row mt-md-2">
                                
                                <div class="col-lg-7 mb-3 input-group">
                                    <input type="password" name="password" placeholder="password" class="form-control"
                                        id="" required>
                                </div>
                                <div class="col-lg-5 mb-3 input-group ">
                                    <button type="submit" class="btn btn-secondary col-12"><i class="fas fa-user-plus"></i></button>
                                </div>
                            </div>

                        </fieldset>
                    </form>
                </div>
                <div class="col-lg-4 col-12"></div>
                <div class="col-lg-1"></div>
            </div>
        </div>
    </div>
</body>